.chat-main
	.main-header
		.main-header__left-box
			.main-header__left-box__currrent-group
				グループ
			.main-header__left-box__member-list
				メンバー :
				.main-header__left-box__member-list__member
					とくめい
		.main-header__edit-btn
			Edit
	.messages
		= render @messages
		.message
			.message__upper-info
				
				.message__upper-info__talker
					グループ
				.message__upper-info__date
					2019/11/09(Sat) 01:33:40
			.message__text
				テキスト
	.form
		= form_for [@group, @message] do |f|
			.input-box
				= f.text_field :content, class: 'form__message', placeholder: 'type a message'
				.form__mask
					%label{class: "input-box__image"}
						%i.fa.fa-image
							= f.file_field :image, class: 'hidden'
				= f.submit 'Send', class: 'form__submit'
